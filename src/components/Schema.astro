---
interface Props {
    name?: string;
    description?: string;
    image?: string;
}

const {
    name = "Moore than Just skin",
    description = "Riverside's premier esthetician for advanced facials and chemical peels.",
    image = "https://morethanjustskin.com/hero-spa-room.webp", // specific domain
} = Astro.props;

const schema = {
    "@context": "https://schema.org",
    "@type": "BeautySalon", // More specific than LocalBusiness
    "@id": "https://morethanjustskin.com/#organization",
    name: name,
    description: description,
    url: "https://morethanjustskin.com",
    telephone: "+19515550123", // Placeholder
    image: image,
    address: {
        "@type": "PostalAddress",
        addressLocality: "Riverside",
        addressRegion: "CA",
        addressCountry: "US",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: 33.9806, // Riverside Lat
        longitude: -117.3755, // Riverside Long
    },
    openingHoursSpecification: [
        {
            "@type": "OpeningHoursSpecification",
            dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            opens: "09:00",
            closes: "18:00",
        },
    ],
    priceRange: "$$",
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
